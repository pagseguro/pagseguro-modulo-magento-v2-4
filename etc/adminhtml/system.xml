<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="payment">
            <group id="pagseguro_payment" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="10" translate="label">
                <label><![CDATA[<div class="pagseguro-payment-logo"></div><div class="pagseguro-payment-byline">Mude para o PagBank. Rende sem você fazer nada e sem limite de valor.</div>]]></label>
                <fieldset_css>complex pagseguro-payment-section</fieldset_css>
                <group id="options" translate="label" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label><![CDATA[<div>Configurações</div>]]></label>
                    <include path="PagSeguro_Payment::system/general.xml"/>
                    <include path="PagSeguro_Payment::system/ticket.xml"/>
                    <include path="PagSeguro_Payment::system/pix.xml"/>
                    <include path="PagSeguro_Payment::system/one_credit_card.xml"/>
                    <include path="PagSeguro_Payment::system/two_credit_card.xml"/>
                </group>
            </group>
        </section>
    </system>
</config>
